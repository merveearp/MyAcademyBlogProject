@model List<AssignTagDto>
@{
    ViewData["Title"] = "Blog Tag Atama";
    Layout = "~/Areas/Admin/Views/Admin/AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-tags-fill me-2"></i>Blog Etiketlerini Yönet
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <form method="post">
                            <div class="mb-3">
                                <input type="text" id="searchTag" class="form-control" placeholder="Etiket ara...">
                            </div>

                            <div class="table-responsive">
                                <table class="table table-hover align-middle" id="tagTable">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 70%">
                                                <i class="bi bi-tag me-2"></i>Etiket Adı
                                            </th>
                                            <th class="text-center" style="width: 30%">
                                                <i class="bi bi-check-circle me-2"></i>Durum
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Count; i++)
                                        {
                                            <tr class="tag-row">
                                                <td>
                                                    <label class="form-check-label w-100 cursor-pointer" for="tag_@i">
                                                        <span class="badge bg-secondary">@Model[i].TagName</span>
                                                    </label>
                                                </td>
                                                <td class="text-center">
                                                    <input type="hidden" asp-for="@Model[i].TagId" />
                                                    <input type="hidden" asp-for="@Model[i].TagName" />
                                                    <input type="hidden" asp-for="@Model[i].BlogId" />
                                                    <div class="form-check form-switch d-inline-block">
                                                        <input class="form-check-input"
                                                               type="checkbox"
                                                               id="tag_@i"
                                                               asp-for="@Model[i].TagExists"
                                                               style="cursor: pointer; width: 3em; height: 1.5em;" />
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mt-4">
                                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Geri Dön
                                </a>
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="bi bi-check-circle me-2"></i>Değişiklikleri Kaydet
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="bi bi-info-circle me-2"></i>Henüz etiket bulunmamaktadır.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .cursor-pointer {
        cursor: pointer;
    }

    .tag-row:hover {
        background-color: #f8f9fa;
    }

    .badge {
        font-size: 0.95rem;
        padding: 0.5em 1em;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Arama fonksiyonu
        const searchInput = document.getElementById('searchTag');
        if (searchInput) {
            searchInput.addEventListener('keyup', function() {
                const filter = this.value.toLowerCase();
                const rows = document.querySelectorAll('.tag-row');

                rows.forEach(row => {
                    const tagName = row.querySelector('.badge').textContent.toLowerCase();
                    row.style.display = tagName.includes(filter) ? '' : 'none';
                });
            });
        }
    });
</script>