@model UpdateCategoryDto
@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Areas/Admin/Views/Admin/AdminLayout.cshtml";

}

<div class="container-fluid">
    
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Kategori Güncelle</h2>
                    <p class="text-muted">Mevcut kategori bilgilerini düzenleyin</p>
                </div>
                <a href="/Admin/Category/Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Geri Dön
                </a>
            </div>
        </div>
    </div>

    
    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card shadow-sm">
                <div class="card-header cat-header-warning py-3">
                    <h5 class="mb-0 text-white"><i class="fas fa-edit me-2"></i>Kategori Bilgileri Düzenleme</h5>
                </div>
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        
                        <div class="alert alert-info cat-info-alert mb-4">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Kategori ID:</strong> @Model.Id
                        </div>

                       
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">
                                <i class="fas fa-tag text-primary me-2"></i>Kategori Adı
                                <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name"
                                   type="text"
                                   class="form-control"
                                   placeholder="Örn: Teknoloji, Seyahat, Yemek..."
                                   autofocus />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                            <small class="form-text text-muted mt-2">
                                <i class="fas fa-info-circle me-1"></i>
                                Kategori adı benzersiz olmalıdır
                            </small>
                        </div>

                        
                        @if (!string.IsNullOrEmpty(Model.CategoryImage))
                        {
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="fas fa-image text-success me-2"></i>Mevcut Görsel
                                </label>
                                <div class="current-image-wrapper">
                                    <img src="@Model.CategoryImage" alt="@Model.Name" class="img-fluid" id="currentImage" />
                                    <div class="current-image-overlay">
                                        <span class="current-image-label">Mevcut Görsel</span>
                                    </div>
                                </div>
                            </div>
                        }

                        
                        <div class="mb-4">
                            <label asp-for="CategoryImage" class="form-label">
                                <i class="fas fa-upload text-info me-2"></i>Yeni Görsel Yükle
                                @if (!string.IsNullOrEmpty(Model.CategoryImage))
                                {
                                    <span class="text-muted small">(Opsiyonel)</span>
                                }
                            </label>
                            <input asp-for="CategoryImage"
                                   type="file"
                                   class="form-control"
                                   accept="image/*"
                                   id="categoryImageInput" />
                            <span asp-validation-for="CategoryImage" class="text-danger small"></span>
                            <small class="form-text text-muted mt-2">
                                <i class="fas fa-info-circle me-1"></i>
                                @if (!string.IsNullOrEmpty(Model.CategoryImage))
                                {
                                    <text>Yeni görsel seçerseniz mevcut görsel güncellenecektir</text>
                                }
                                else
                                {
                                    <text>Önerilen boyut: 800x600px (JPG, PNG, GIF)</text>
                                }
                            </small>
                        </div>

                       
                        <div class="mb-4" id="newImagePreviewContainer" style="display: none;">
                            <label class="form-label">
                                <i class="fas fa-eye text-warning me-2"></i>Yeni Görsel Önizleme
                            </label>
                            <div class="image-preview-wrapper">
                                <img id="newImagePreview" src="" alt="Önizleme" class="img-fluid" />
                                <button type="button" class="btn btn-sm btn-danger remove-preview" id="removePreview">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>

                      
                        <div class="d-flex gap-3 justify-content-end mt-5">
                            <a href="/Admin/Category/Index" class="cat-btn cat-btn-secondary cat-btn-lg">
                                <i class="fas fa-times me-2"></i>İptal
                            </a>
                            <button type="submit" class="cat-btn cat-btn-warning cat-btn-lg">
                                <i class="fas fa-sync-alt me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>

         
            <div class="card mt-4 cat-info-card">
                <div class="card-body">
                    <h6 class="card-title cat-info-title">
                        <i class="fas fa-lightbulb me-2"></i>Güncelleme İpuçları
                    </h6>
                    <ul class="mb-0 text-muted small">
                        <li>Kategori adını değiştirirken SEO uyumluluğuna dikkat edin</li>
                        <li>Yeni görsel yüklemezseniz mevcut görsel korunacaktır</li>
                        <li>Kategori adı değiştirildiğinde URL'ler etkilenebilir</li>
                        <li>Bu kategoriye bağlı bloglar varsa dikkatli olun</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

    <script>
        
        document.getElementById('categoryImageInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('newImagePreview').src = e.target.result;
                    document.getElementById('newImagePreviewContainer').style.display = 'block';

                   
                    const currentImage = document.getElementById('currentImage');
                    if (currentImage) {
                        currentImage.parentElement.style.opacity = '0.5';
                    }
                }
                reader.readAsDataURL(file);
            }
        });

       
        document.getElementById('removePreview').addEventListener('click', function() {
            document.getElementById('categoryImageInput').value = '';
            document.getElementById('newImagePreviewContainer').style.display = 'none';
            document.getElementById('newImagePreview').src = '';

            
            const currentImage = document.getElementById('currentImage');
            if (currentImage) {
                currentImage.parentElement.style.opacity = '1';
            }
        });
    </script>
}

