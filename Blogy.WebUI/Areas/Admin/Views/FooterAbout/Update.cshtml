@model UpdateFooterAboutDto
@{
    ViewData["Title"] = "About Text Güncelleme";
    Layout = "~/Areas/Admin/Views/Admin/AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-0">
                <i class="fas fa-edit me-2"></i>About Text Güncelleme
            </h2>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-text-height me-2"></i>Footer About Metni
            </h5>
        </div>

        <div class="card-body">
            <form id="updateForm" method="post" asp-action="Update" asp-controller="FooterAbout">

                <input type="hidden" asp-for="Id" />

               
                <div class="mb-3">
                    <label for="topicInput" class="form-label">
                        <i class="fas fa-lightbulb me-2"></i>AI Konu Başlığı
                    </label>

                    <input type="text"
                           id="topicInput"
                           class="form-control"
                           placeholder="Örn: Kişisel yazılım blogu, .NET projeleri, teknoloji içerikleri">

                    <div class="form-text">
                        <i class="fas fa-info-circle me-1"></i>
                        AI bu konuya göre about metni üretecektir.
                    </div>
                </div>

                
                <div class="mb-3">
                    <label asp-for="Content" class="form-label">
                        <i class="fas fa-align-left me-2"></i>About Text
                    </label>

                    <textarea asp-for="Content"
                              class="form-control"
                              id="contentArea"
                              rows="10"
                              placeholder="Footer'da gösterilecek about metnini buraya yazın..."
                              required></textarea>

                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <button type="button" class="btn btn-outline-secondary" id="btnAiGenerate">
                            <i class="fas fa-robot me-2"></i>AI ile Oluştur
                        </button>

                        <small class="text-muted">
                            <i class="fas fa-magic me-1"></i>
                            AI öneri üretir, kaydetmez
                        </small>
                    </div>
                </div>

               
                <div class="alert alert-light d-flex justify-content-between align-items-center">
                    <span>
                        <i class="fas fa-keyboard me-2"></i>Karakter Sayısı:
                    </span>
                    <span id="charCount" class="badge bg-primary">0</span>
                </div>

               
                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Geri Dön
                    </a>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function updateCharCount() {
        const text = $('#contentArea').val();
        $('#charCount').text(text.length);
    }

    $(document).ready(function () {

        updateCharCount();
        $('#contentArea').on('input', updateCharCount);

        $('#btnAiGenerate').on('click', function () {

            const topic = $('#topicInput').val();

            if (!topic || topic.trim().length < 3) {
                alert("Konu girmen lazım");
                return;
            }

            $.ajax({
                url: '/Admin/FooterAbout/GenerateWithAiAbout',
                type: 'POST',
                data: { topic: topic },
                success: function (aiText) {
                    $('#contentArea').val(aiText);
                    updateCharCount();
                },
                error: function () {
                    alert("Hata oldu");
                }
            });
        });
    });
</script>
