@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Admin/AdminLayout.cshtml";

}
<h2>Rol Listesi</h2>
<br />
<br />
@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>

                <a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a>              
            </td>
        </tr>
    }

</table>
<a href="/Admin/Role/CreateRole" class="btn btn-success">Yeni Rol Oluştur</a>


