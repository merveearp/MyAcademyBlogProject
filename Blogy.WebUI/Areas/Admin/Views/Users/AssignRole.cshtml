@model List<AssignRoleDto>
@{
    ViewData["Title"] = "Rol Atama";
    Layout = "~/Areas/Admin/Views/Admin/AdminLayout.cshtml";
}

<div class="container-fluid">

    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="mb-1">Rol Atama</h4>
                    <p class="text-muted mb-0">
                        <strong>@ViewBag.FullName</strong> kullanıcısına rol atayabilirsiniz.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <form method="post">
        <div class="row">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="col-md-6 col-lg-4 mb-3">
                    <div class="card role-card shadow-sm h-100">
                        <div class="card-body d-flex justify-content-between align-items-center">

                            <div>
                                <span class="badge bg-primary mb-2">
                                    @Model[i].RoleName
                                </span>
                                <p class="text-muted small mb-0">
                                    Bu rol kullanıcıya atanacaktır.
                                </p>
                            </div>

                            <div class="form-check form-switch">
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].UserId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />

                                <input class="form-check-input"
                                       type="checkbox"
                                       asp-for="@Model[i].RoleExists" />
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="text-end mt-4">
            <button type="submit" class="btn btn-primary btn-lg px-4">
                <i class="fas fa-save me-2"></i>Rolleri Kaydet
            </button>
        </div>
    </form>

</div>

<style>
    .role-card {
        border-radius: 12px;
        transition: all 0.3s ease;
        border: none;
    }

        .role-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        }

    .form-switch .form-check-input {
        width: 2.5em;
        height: 1.3em;
        cursor: pointer;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5em 0.75em;
    }
</style>
