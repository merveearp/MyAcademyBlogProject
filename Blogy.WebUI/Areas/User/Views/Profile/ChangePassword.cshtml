@model ChangePasswordDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm p-4">
                <h3 class="text-center mb-4 text-primary">Şifre Değiştirme</h3>

                <form method="post">

                    <div class="form-group mb-3">
                        <label class="fw-bold">Mevcut Şifreniz</label>
                        <div class="input-group">
                            <input type="password"
                                   class="form-control"
                                   asp-for="CurrentPassword"
                                   id="currentPassword"
                                   autocomplete="current-password"
                                   required />

                            <button class="btn btn-outline-secondary"
                                    type="button"
                                    data-target="currentPassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label class="fw-bold">Yeni Şifreniz</label>
                        <div class="input-group">
                            <input type="password"
                                   class="form-control"
                                   asp-for="NewPassword"
                                   id="newPassword"
                                   autocomplete="new-password"
                                   required />

                            <button class="btn btn-outline-secondary"
                                    type="button"
                                    data-target="newPassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label class="fw-bold">Yeni Şifre (Tekrar)</label>
                        <div class="input-group">
                            <input type="password"
                                   class="form-control"
                                   asp-for="ConfirmPassword"
                                   id="confirmPassword"
                                   autocomplete="new-password"
                                   required />

                            <button class="btn btn-outline-secondary"
                                    type="button"
                                    data-target="confirmPassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">@Html.ValidationSummary()</span>
                    </div>


                    <div class="text-center">
                        <button type="submit" class="btn btn-dark px-4">
                            Şifreyi Değiştir
                        </button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {

        document.querySelectorAll("button[data-target]").forEach(btn => {
            btn.addEventListener("click", function () {

                const input = document.getElementById(this.dataset.target);
                const icon = this.querySelector("i");

                if (input.type === "password") {
                    input.type = "text";
                    icon.classList.replace("bi-eye", "bi-eye-slash");
                } else {
                    input.type = "password";
                    icon.classList.replace("bi-eye-slash", "bi-eye");
                }
            });
        });

    });
</script>


