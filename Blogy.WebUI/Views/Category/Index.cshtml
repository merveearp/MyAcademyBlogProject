@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="section search-result-wrap">
    <div class="container">

        <div class="row mb-5">
            <div class="col-12 text-center">
                <h1 class="display-4 fw-bold mb-2">Kategoriler</h1>
                <p class="text-muted">İlgi alanınıza göre blog yazılarını keşfedin</p>
            </div>
        </div>

        <div class="row posts-entry">

            <div class="col-lg-8">
                <div class="row g-4">
                    @foreach (var category in Model)
                    {
                        <div class="col-md-6">
                            <a asp-controller="Blog"
                               asp-action="GetBlogsByCategory"
                               asp-route-categoryId="@category.Id"
                               class="category-card-link">
                                <div class="category-card">
           
                                    <div class="category-image">
                                        @if (!string.IsNullOrEmpty(category.CategoryImage))
                                        {
                                            <img src="@category.CategoryImage" alt="@category.CategoryName" />
                                        }
                                        else
                                        {
                                            <div class="category-placeholder">
                                                <i class="fas fa-folder"></i>
                                            </div>
                                        }
                                        <div class="category-overlay"></div>
                                    </div>


                                    <div class="category-content">
                                        <h3 class="category-title">@category.CategoryName</h3>
                                        <div class="category-meta">
                                            <span class="category-date">
                                                <i class="far fa-calendar"></i>
                                                @category.CreatedDate.ToString("dd MMMM yyyy")
                                            </span>
                                        </div>
                                    </div>

                                    <div class="category-icon">
                                        <i class="fas fa-arrow-right"></i>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4 sidebar">
                @await Component.InvokeAsync("_BlogsByCategoryLatestBlogComponent")
                @await Component.InvokeAsync("_DefaultCategoryListComponent")
            </div>
        </div>
    </div>
</div>

<style>
    .search-result-wrap {
        padding: 60px 0;
    }

    /* Kategori Kartı */
    .category-card-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .category-card {
        position: relative;
        border-radius: 16px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        height: 280px;
    }

        .category-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
        }

    /* Kategori Resmi */
    .category-image {
        position: relative;
        height: 180px;
        overflow: hidden;
    }

        .category-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease;
        }

    .category-card:hover .category-image img {
        transform: scale(1.1);
    }

    .category-placeholder {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

        .category-placeholder i {
            font-size: 4rem;
            color: rgba(255, 255, 255, 0.9);
        }

    .category-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(180deg, transparent 0%, rgba(0, 0, 0, 0.4) 100%);
        transition: opacity 0.4s ease;
    }

    .category-card:hover .category-overlay {
        opacity: 0.8;
    }

    /* Kategori İçerik */
    .category-content {
        padding: 20px;
    }

    .category-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 10px;
        color: #2d3748;
        transition: color 0.3s ease;
    }

    .category-card:hover .category-title {
        color: #667eea;
    }

    .category-meta {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .category-date {
        font-size: 0.875rem;
        color: #718096;
        display: flex;
        align-items: center;
        gap: 6px;
    }

        .category-date i {
            font-size: 0.875rem;
        }

    /* Hover İkonu */
    .category-icon {
        position: absolute;
        bottom: 20px;
        right: 20px;
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transform: scale(0.8);
        transition: all 0.4s ease;
    }

        .category-icon i {
            color: #fff;
            font-size: 1rem;
        }

    .category-card:hover .category-icon {
        opacity: 1;
        transform: scale(1);
    }

    /* Sayfa Başlığı */
    .display-4 {
        color: #1a202c;
        position: relative;
        display: inline-block;
    }

        .display-4::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 2px;
        }

    /* Responsive */
  (max-width: 768px) {
        .search-result-wrap {
            padding: 40px 0;
        }

        .category-card {
            height: 260px;
        }

        .category-image {
            height: 160px;
        }

        .category-title {
            font-size: 1.1rem;
        }

        .display-4 {
            font-size: 2rem;
        }

        .col-md-6 {
            margin-bottom: 0 !important;
        }
    }

    (max-width: 576px) {
        .category-card {
            height: 240px;
        }

        .category-image {
            height: 140px;
        }

        .category-content {
            padding: 15px;
        }

        .category-title {
            font-size: 1rem;
        }
    }
</style>