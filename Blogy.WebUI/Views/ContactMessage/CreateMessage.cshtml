@model CreateContactMessageDto
@{
    ViewData["Title"] = "Bize Yazın";
    Layout = "~/Views/UILayout/Index.cshtml";
}
<div class="hero overlay inner-page bg-primary py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center pt-5">
            <div class="col-lg-6">
                <h1 class="heading text-white mb-3" data-aos="fade-up">Bize Yazın</h1>
                <p class="text-white-50" data-aos="fade-up" data-aos-delay="100">
                    Sorularınız, önerileriniz veya geri bildirimleriniz için mesaj gönderin
                </p>
            </div>
        </div>
    </div>
</div>
<div class="section">
    <div class="container">
        <div class="row">
            @await Component.InvokeAsync("_DefaultContactInfoComponent")
           
            <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">

               

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form id="contactForm" asp-action="CreateMessage" method="post">
                    <div class="row">
                        <div class="col-6 mb-3">
                           <input asp-for="FullName"
                           type="text"
                           class="form-control"
                           placeholder="Adınız Soyadınız"
                           value="@(ViewBag.FullName ?? "")" />
                           

                        </div>

                        <div class="col-6 mb-3">
                            <input asp-for="Email"
                                   type="text"
                                   class="form-control"
                                   placeholder="Email Adresiniz"
                                   value="@(ViewBag.Email ?? "")" />

                        </div>


                        <div class="col-12 mb-3">
                            <input asp-for="Subject"
                                   type="text"
                                   class="form-control"
                                   placeholder="Konu">
                            <span asp-validation-for="Subject" class="text-danger small"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <textarea asp-for="Message"
                                      cols="30"
                                      rows="7"
                                      class="form-control"
                                      placeholder="Mesajınızı buraya yazın..."></textarea>
                            <span asp-validation-for="Message" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send-fill me-2"></i>
                                Mesajı Gönder
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById("contactForm").addEventListener("submit", function (e) {

        const isAuthenticated = @(User?.Identity?.IsAuthenticated == true ? "true" : "false");


        if (!isAuthenticated) {
            e.preventDefault();

            Swal.fire({
                icon: 'warning',
                title: 'Giriş gerekli',
                text: 'Mesaj gönderebilmek için giriş yapmalısınız.',
                confirmButtonText: 'Giriş Yap',
                showCancelButton: true,
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Login/Index';
                }
            });
        }
    });
</script>
