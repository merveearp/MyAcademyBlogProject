@model RegisterDto
@{
    ViewData["Title"] = "Index";
    Layout = null;


}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Register | Kayıt Ol </title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/Account/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/Account/css/style.css">
</head>
<body>

    <div class="main">

        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Kullanıcı Kaydı </h2>
                        <form method="post" class="register-form" id="register-form" asp-controller="Register" asp-action="Index">

                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="FirstName" id="name" placeholder="Adınız" required/>
                            </div>
                            <div class="form-group">
                                <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                                <input type="text" asp-for="LastName" id="name" placeholder="Soyadınız" required />
                            </div>
                            <div class="form-group">
                                <label for="email"><i class="zmdi zmdi-email"></i></label>
                                <input type="email" asp-for="Email" id="email" placeholder="Email Adresiniz" required />
                            </div>

                            <div class="form-group">
                                <label for="username">
                                    <i class="zmdi zmdi-account-circle"></i>
                                </label>
                                <input type="text" asp-for="UserName" id="username" placeholder="Kullanıcı Adınız" required />
                            </div>

                            <div class="form-group position-relative">
                                <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                                <input type="password" asp-for="Password" id="pass" placeholder="Şifreniz" required />

                               
                                <span toggle="#pass" class="zmdi zmdi-eye field-icon toggle-password"
                                      style="position:absolute; right:15px; top:12px; cursor:pointer;"></span>
                            </div>

                            <div class="form-group position-relative">
                                <label>Şifreyi Tekrar Giriniz</label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword" required />

                                <span toggle="#pass" class="zmdi zmdi-eye field-icon toggle-password"
                                      style="position:absolute; right:15px; top:12px; cursor:pointer;"></span>

                            </div>

                           
                            <p style="color:red">@Html.ValidationSummary() </p>
                            
                            <div class="form-group form-button">
                                <input type="submit" name="signup" id="signup" class="form-submit" value="Kayıt Ol" />
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src="~/Account/images/signup-image.jpg" alt="sing up image"></figure>
                        <a href="/Login/Index" class="signup-image-link">Zaten Üyeyim </a>
                    </div>
                </div>
            </div>
        </section>
      
    </div>

    <!-- JS -->
    <script src="~/Account/vendor/jquery/jquery.min.js"></script>
    <script src="~/Account/js/main.js"></script>
   
</body>
</html>
<script>
    $(document).ready(function () {
        $(".toggle-password").click(function () {
            $(this).toggleClass("zmdi-eye zmdi-eye-off");
            let input = $($(this).attr("toggle"));
            if (input.attr("type") === "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    });
</script>
