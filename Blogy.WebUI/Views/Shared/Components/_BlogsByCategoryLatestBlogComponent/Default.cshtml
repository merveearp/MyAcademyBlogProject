@model List<ResultBlogDto>
@*
    _BlogsByCategoryLatestBlog3
*@
<div class="sidebar-box">
	<h3 class="heading">Son Eklenen Bloglar</h3>
	<div class="post-entry-sidebar">
		<ul>
			@foreach(var item in Model)
			{
				<li>
					<a href="/Blog/BlogDetails/@item.Id" class="img-link me-4 blog-img-hover">
											
						<img src="@item.CoverImage" alt="Image placeholder" class="me-4 rounded">
						<div class="text">
							<h4>@item.Title</h4>
							<div class="post-meta">
								<span class="mr-2">@item.CreatedDate.ToShortDateString()</span>
							</div>
						</div>
					</a>
				</li>
			}
			
			
		</ul>
	</div>
</div>