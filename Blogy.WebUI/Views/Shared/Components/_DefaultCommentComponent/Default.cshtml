<div class="comment-form-wrap pt-5">

    <h3 class="mb-5">Yorum Bırak</h3>

    @if (TempData["ToxicComment"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ToxicComment"]
        </div>
    }

    <form id="commentForm"
          method="post"
          asp-controller="Comment"
          asp-action="Create">

        <input type="hidden" name="BlogId" value="@ViewBag.BlogId" />

        <div class="form-group">
            <label>Mesaj</label>
            <textarea name="Content"
                      cols="30"
                      rows="5"
                      class="form-control"
                      required></textarea>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                Yorumu Kaydet
            </button>
        </div>
    </form>
</div>
