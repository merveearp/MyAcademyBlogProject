@model ResultContactInfoDto

<div class="col-lg-4 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
	<div class="contact-info">
		<!-- Lokasyon -->
		<div class="contact-item address">
			<div class="icon-wrapper">
				<i class="icon-room"></i>
			</div>
			<div class="contact-content">
				<h4 class="contact-title">Lokasyon</h4>
				<p class="contact-text">@Model.Location</p>
			</div>
		</div>

		<!-- Çalışma Saatleri -->
		<div class="contact-item open-hours">
			<div class="icon-wrapper">
				<i class="icon-clock-o"></i>
			</div>
			<div class="contact-content">
				<h4 class="contact-title">Çalışma Saatlerimiz</h4>
				<p class="contact-text">@Model.OpenHours</p>
			</div>
		</div>

		<!-- Email -->
		<div class="contact-item email">
			<div class="icon-wrapper">
				<i class="icon-envelope"></i>
			</div>
			<div class="contact-content">
				<h4 class="contact-title">Email</h4>
				<p class="contact-text">
					<a href="mailto:@Model.Email" class="contact-link">@Model.Email</a>
				</p>
			</div>
		</div>

		<!-- Telefon -->
		<div class="contact-item phone">
			<div class="icon-wrapper">
				<i class="icon-phone"></i>
			</div>
			<div class="contact-content">
				<h4 class="contact-title">Telefon</h4>
				<p class="contact-text">
					<a href="tel:@Model.Phone.Replace(" ", "")" class="contact-link">@Model.Phone</a>
				</p>
			</div>
		</div>
	</div>
</div>

<style>
	.contact-info {
		background: #fff;
		padding: 30px;
		border-radius: 12px;
		box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
		transition: all 0.3s ease;
	}

		.contact-info:hover {
			box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
			transform: translateY(-5px);
		}

	.contact-item {
		display: flex;
		align-items: flex-start;
		padding: 20px 0;
		border-bottom: 1px solid #f0f0f0;
		transition: all 0.3s ease;
	}

		.contact-item:last-child {
			border-bottom: none;
			padding-bottom: 0;
		}

		.contact-item:first-child {
			padding-top: 0;
		}

		.contact-item:hover {
			padding-left: 10px;
		}

	.icon-wrapper {
		width: 50px;
		height: 50px;
		min-width: 50px;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-right: 20px;
		transition: all 0.3s ease;
	}

	.contact-item:hover .icon-wrapper {
		transform: rotate(360deg) scale(1.1);
	}

	.icon-wrapper i {
		color: #fff;
		font-size: 22px;
	}

	.contact-content {
		flex: 1;
	}

	.contact-title {
		font-size: 16px;
		font-weight: 600;
		color: #333;
		margin-bottom: 8px;
		letter-spacing: 0.5px;
	}

	.contact-text {
		font-size: 14px;
		color: #666;
		line-height: 1.7;
		margin: 0;
		white-space: pre-line;
	}

	.contact-link {
		color: #667eea;
		text-decoration: none;
		transition: all 0.3s ease;
		position: relative;
	}

		.contact-link:hover {
			color: #764ba2;
		}

		.contact-link::after {
			content: '';
			position: absolute;
			width: 0;
			height: 2px;
			bottom: -2px;
			left: 0;
			background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
			transition: width 0.3s ease;
		}

		.contact-link:hover::after {
			width: 100%;
		}

	/* Responsive Tasarım */
	 {
		.contact-info {
			padding: 20px;
		}

		.icon-wrapper {
			width: 45px;
			height: 45px;
			min-width: 45px;
			margin-right: 15px;
		}

			.icon-wrapper i {
				font-size: 20px;
			}

		.contact-title {
			font-size: 15px;
		}

		.contact-text {
			font-size: 13px;
		}
	}
</style>